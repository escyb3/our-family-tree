/* Reset בסיסי */
body, h1, h2, h3, p, ul {
  margin: 0;
  padding: 0;
  font-family: 'Segoe UI', sans-serif;
  direction: rtl;
}

/* רקע כללי */
body {
  background-color: #f7f7f7;
  color: #333;
  line-height: 1.6;
}

/* כותרת עליונה */
header {
  background-color: #004080;
  color: white;
  padding: 1.5em;
  text-align: center;
}
header .logo {
  max-width: 100px;
  display: block;
  margin: 0 auto 10px;
}
header h1 {
  font-size: 2em;
}
header h2 {
  font-size: 1.2em;
  opacity: 0.9;
}

/* תפריט ניווט */
nav {
  background-color: #0059b3;
}
nav ul {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  list-style: none;
}
nav li {
  margin: 0.5em;
}
nav a {
  color: white;
  padding: 0.6em 1.2em;
  background-color: #0073e6;
  border-radius: 10px;
  text-decoration: none;
  font-weight: bold;
  transition: 0.3s;
}
nav a:hover {
  background-color: #3399ff;
}

/* תוכן ראשי */
main {
  padding: 2em;
  max-width: 1000px;
  margin: auto;
  background: white;
  border-radius: 12px;
  box-shadow: 0 0 10px rgba(0,0,0,0.1);
}
section {
  margin-bottom: 2em;
}
.hero-image img {
  max-width: 100%;
  border-radius: 12px;
  margin-top: 1em;
}

/* תחתית */
footer {
  text-align: center;
  padding: 1.2em;
  background-color: #ddd;
  font-size: 0.9em;
  color: #555;
}
footer a {
  color: #004080;
  text-decoration: none;
}
footer a:hover {
  text-decoration: underline;
}

/* רספונסיביות */
@media (max-width: 600px) {
  nav ul {
    flex-direction: column;
  }
  nav li {
    margin: 0.3em 0;
  }
}
